<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ItemsControlStyle" TargetType="{x:Type ItemsControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Storyboard x:Key="Click_Btn_LeftMenu">
        <ColorAnimation
            Storyboard.TargetName="backgroundElement"
            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
            From="#2a3d2a" 
            To="#3f5f3f" 
            Duration="0:0:0.2" 
            AutoReverse="False"/>
    </Storyboard>

    <Storyboard x:Key="Thickness_Low">
        <ThicknessAnimation
            Storyboard.TargetName="backgroundElement"
            Storyboard.TargetProperty="Margin"
            From="5,7,5,7"
            To="7,7,7,7"
            Duration="0:0:0.1"
            AutoReverse="False"/>
    </Storyboard>

    <Storyboard x:Key="Thickness_Hight">
        <ThicknessAnimation
            Storyboard.TargetName="backgroundElement"
            Storyboard.TargetProperty="Margin"
            From="7,7,7,7"
            To="5,7,5,7"
            Duration="0:0:0.1"
            AutoReverse="False"/>
    </Storyboard>

    <Storyboard x:Key="Light_Btn_LeftMenu">
        <ColorAnimation
            Storyboard.TargetName="backgroundElement"
            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
            From="#3c5c3c"
            To="#476b47"
            Duration="0:0:0.2" 
            AutoReverse="False"/>
    </Storyboard>

    <Storyboard x:Key="Dark_Btn_LeftMenu">
        <ColorAnimation
            Storyboard.TargetName="backgroundElement"
            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
            From="#476b47" 
            To="#3c5c3c" 
            Duration="0:0:0.2" 
            AutoReverse="False"/>
    </Storyboard>

    <ControlTemplate x:Key="Btn_LeftMenu_Template" TargetType="Button">
        <Border
            x:Name="backgroundElement"
            Background="#3c5c3c"
            CornerRadius="4"
            Margin="7"
            Padding="10"
            
            BorderThickness="0">
            <TextBlock 
        Text="{TemplateBinding Content}"
        FontSize="16"
        Foreground="AliceBlue"
        TextWrapping="Wrap"
        TextAlignment="Center"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter 
                    TargetName="backgroundElement"
                    Property="Background"
                    Value="#2f462f"/>
            </Trigger>
            <EventTrigger RoutedEvent="Border.MouseLeftButtonDown"/>
            <EventTrigger RoutedEvent="Border.MouseLeftButtonUp"/>
            <EventTrigger RoutedEvent="Border.MouseEnter">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{StaticResource Light_Btn_LeftMenu}"/>
                    <BeginStoryboard Storyboard="{StaticResource Thickness_Hight}"/>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="Border.MouseLeave">
                <EventTrigger.Actions>
                    <BeginStoryboard Storyboard="{StaticResource Dark_Btn_LeftMenu}"/>
                    <BeginStoryboard Storyboard="{StaticResource Thickness_Low}"/>
                </EventTrigger.Actions>
            </EventTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>